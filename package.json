{
  "name": "x-pages",
  "version": "1.0.0-beta.3",
  "description": "A static site development workflow",
  "keywords": [
    "pages-tasks",
    "x-pages",
    "cli",
    "zce"
  ],
  "homepage": "https://github.com/zce/x-pages#readme",
  "bugs": {
    "url": "https://github.com/zce/x-pages/issues"
  },
  "license": "MIT",
  "author": {
    "name": "zce",
    "email": "w@zce.me",
    "url": "https://zce.me"
  },
  "main": "lib/index.js",
  "bin": "bin/x-pages.js",
  "scripts": {
    "format": "prettier --write \"**/*.js\"",
    "lint": "standard",
    "commit": "git-cz",
    "release": "standard-version",
    "preship": "yarn format & yarn lint",
    "ship": "yarn publish --registry=https://registry.yarnpkg.com"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "standard --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ],
    "*.md": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "proseWrap": "never",
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "@babel/core": "^7.7.4",
    "@babel/preset-env": "^7.7.4",
    "autoprefixer": "^9.7.2",
    "browser-sync": "^2.26.7",
    "bs-html-injector": "^3.0.3",
    "csscomb": "^4.3.0",
    "cssnano": "^4.1.10",
    "del": "^5.1.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-beautify": "^3.0.0",
    "gulp-gh-pages": "^0.5.4",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^3.0.0",
    "gulp-imagemin": "^6.2.0",
    "gulp-load-plugins": "^2.0.1",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-sass": "^4.0.2",
    "gulp-size": "^3.0.0",
    "gulp-swig": "^0.9.1",
    "gulp-uglify": "^3.0.2",
    "gulp-useref": "^4.0.0",
    "minimist": "^1.2.0",
    "standard": "^14.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "commitizen": "4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1",
    "standard-version": "7.0.1"
  },
  "engines": {
    "node": ">=8"
  }
}
